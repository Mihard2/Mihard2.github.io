.weather
    background-color #fff
    border-radius 8px
    box-shadow 0px 8px 40px rgba(0, 0, 0, 0.1)
    max-width 552px
    padding 28px
    margin auto

    &__wrapper
        display flex
        flex-wrap wrap

    &__block
        width 100%
        margin  5px 0 10px
        display flex
        align-items center
        &.error
            width 100%
        span
            padding-left 3px
            padding-right 3px
            font-weight 900
        &.city
            font-weight 900
        @media small
            width 50%
